<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <title>EliteMode</title>
  </head>
  <body>
    <nav>
      <div>
        <button onclick="openMenu()">
          <span class="material-symbols-outlined">menu</span>
        </button>
      </div>
      <div id="brand">
        <p>EliteMode</p>
      </div>
      <div>
        <button>
          <a href="/favorites" class="favorites-button">
            <span class="material-symbols-outlined">favorite</span>
          </a>
        </button>
        <button>
          <a href="/clothes/cart" class="cart-button">
            <span class="material-symbols-outlined">shopping_bag</span>
          </a>
        </button>
      </div>
    </nav>

    <section id="section">
      <div id="headers">
        <h1>Discover the best workout apparel.</h1>
        <h2>Created by top-rated design and creative professionals.</h2>
      </div>
      <div id="trending">
        <p>Shop Men</p>
        <p>Shop Women</p>
      </div>
    </section>

    <main>
      <% clothes.forEach(function(product) { %>
      <article class="product">
        <div class="img-placeholder">
          <img src="<%= product.image %>" alt="<%= product.name %>" />
        </div>
        <div class="card-footer">
          <h2><%= product.name %></h2>
          <p>Description: <%= product.description %></p>
          <p>Price: $<%= product.price.toFixed(2) %></p>

          <form action="/favorites" method="POST">
            <input type="hidden" name="productId" value="<%= product.id %>" />
            <button type="submit">
              <span class="material-symbols-outlined">heart_plus</span>
            </button>
          </form>
          <form action="/clothes/cart" method="POST">
            <input type="hidden" name="productId" value="<%= product.id %>" />
            <button type="submit">
              <span class="material-symbols-outlined">add_shopping_cart</span>
            </button>
          </form>
        </div>
      </article>
      <% }) %>
    </main>

    <div id="menu" class="menu">
      <button class="close-btn" onclick="closeMenu()">âœ–</button>
      <h2>Menu</h2>
      <ul>
        <li><a href="/clothes/products/men">Shop Men</a></li>
        <li><a href="/clothes/products/women">Shop Women</a></li>
        <li><a href="/auth/sign-out">Sign Out</a></li>
      </ul>
    </div>

    <script src="/js/script.js"></script>
  </body>
</html>
